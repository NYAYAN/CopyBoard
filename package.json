{
  "name": "copyboard",
  "version": "2.4.0",
  "description": "Gelişmiş Pano Yöneticisi ve OCR Aracı",
  "main": "src/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYAYAN/CopyBoard.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Nurullah YAYAN",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.nurullahyayan.copyboard",
    "productName": "CopyBoard",
    "publish": [
      {
        "provider": "github",
        "owner": "NYAYAN",
        "repo": "CopyBoard"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns",
      "category": "public.app-category.utilities",
      "identity": null
    },
    "dmg": {
      "icon": "icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "installer_info.txt"
    },
    "files": [
      "src/**/*",
      "package.json",
      "icon.png",
      "trayIcon.png",
      "!**/*.map",
      "!**/*.idb",
      "!**/*.pdb"
    ]
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.3.9",
    "tesseract.js": "^5.1.1",
    "uuid": "^13.0.0"
  }
}